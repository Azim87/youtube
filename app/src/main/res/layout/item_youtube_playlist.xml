<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp">

    <ImageView
        android:id="@+id/detail_image_view"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/image_border_style"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/detail_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/fjallaone_regular"
        android:text="@string/image_title"
        android:textColor="@color/colorTitle"
        android:textSize="19sp"
        app:layout_constraintStart_toEndOf="@+id/detail_image_view"
        app:layout_constraintTop_toTopOf="@+id/detail_image_view" />

    <TextView
        android:id="@+id/detail_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="04:04"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/detail_textView"
        app:layout_constraintTop_toBottomOf="@+id/detail_textView" />

</androidx.constraintlayout.widget.ConstraintLayout>